  "version": "0.2.0",
  "configurations": [
    {
      "name": "server",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "args": [
        "run",
        "serve_api"
      ],
      "console": "integratedTerminal",
      "restart": true,
      "skipFiles": [
        "<node_internals>/**",
        "cluster.js"
      ],
    },
    // {
    //   "type": "node",
