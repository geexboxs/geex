    //   "console": "integratedTerminal",
    //   "outFiles": [
    //     "${workspaceFolder}/dist/**/*.js"
    //   ],
    //   "skipFiles": [
    //     "${workspaceFolder}/node_modules/**/*.js",
    //     "<node_internals>/**/*.js"
    //   ],
    //   "sourceMaps": true
    // },
    {
      "type": "chrome",
      "request": "attach",
      "name": "client",
      "port": 9222,
      "urlFilter": "http://localhost:8000/*",
      "webRoot": "${workspaceFolder/client}",
      "sourceMaps": true,
      "skipFiles": [
        "node_modules/**/*.js",
      ],
    },
  ]
}
