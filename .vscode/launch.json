    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug",
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/ts-node-dev",
            "args": [
                "${workspaceRoot}/index.ts"
            ],
            "restart": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run",
            "console": "integratedTerminal",
            "args": [
                "-r",
                "ts-node/register",
                "index.ts"
            ],
        }
    ]
}
